<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>one.chartsy</groupId>
    <artifactId>chartsy-repository</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>chartsy-repository</name>

    <repositories>
        <repository>
            <id>netbeans</id>
            <name>NetBeans</name>
            <url>https://repo.maven.apache.org/maven2/</url>
        </repository>
    </repositories>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.netbeans.utilities</groupId>
                    <artifactId>nbm-maven-plugin</artifactId>
                    <version>4.7</version>
                    <extensions>true</extensions>
                    <configuration>
                        <brandingToken>${brandingToken}</brandingToken>
                        <cluster>${brandingToken}</cluster>
                    </configuration>
                    <dependencies>
                        <!-- Temporary (or not) workaround for maven-dependency-analyser not supporting Java 17 yet -->
                        <dependency>
                            <groupId>org.ow2.asm</groupId>
                            <artifactId>asm</artifactId>
                            <version>9.2</version>
                        </dependency>
                    </dependencies>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.8.1</version>
                    <configuration>
                        <source>17</source>
                        <target>17</target>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>3.2.0</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <modules>
        <module>branding</module>
        <module>application</module>
        <module>chartsy-benchmarking</module>
        <module>chartsy-core</module>
        <module>chartsy-core-ml</module>
        <module>chartsy-desktop</module>
        <module>chartsy-exploration</module>
        <module>chartsy-kernel-link</module>
        <module>chartsy-kernel</module>
        <module>chartsy-persistence</module>
        <module>chartsy-frontend</module>
        <module>chartsy-frontend-rest</module>
        <module>chartsy-ide-engine</module>
        <module>chartsy-libs</module>
        <!--module>chartsy-libs/com-jcraft-jsch</module>
        <module>chartsy-libs/org-apache-commons-logging</module-->
        <module>chartsy-libs/slf4j-api</module>
        <module>chartsy-libs/slf4j-jdk14</module>
        <module>chartsy-samples</module>
        <module>chartsy-simulation</module>
        <module>chartsy-trade</module>
        <module>chartsy-ui</module>
        <module>chartsy-ui-chartfx</module>
        <module>chartsy-ui-chart</module>
        <module>chartsy-ui-chart-indicators</module>
        <module>chartsy-ui-chart-overlays</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>${junit5.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <version>${junit5.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-params</artifactId>
            <version>${junit5.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <version>${assertj.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <properties>
        <brandingToken>chartsy</brandingToken>
        <assertj.version>3.22.0</assertj.version>
        <commons.collections.version>4.4</commons.collections.version>
        <commons.lang.version>3.12.0</commons.lang.version>
        <commons.math.version>3.6.1</commons.math.version>
        <feign.version>11.8</feign.version>
        <gson.version>2.8.9</gson.version>
        <hikari.version>5.0.1</hikari.version>
        <h2.version>2.1.210</h2.version>
        <immutables.version>2.9.0</immutables.version>
        <jackson.version>2.13.1</jackson.version>
        <jakarta.annotation.version>1.3.5</jakarta.annotation.version>
        <jaxb.api.version>2.3.1</jaxb.api.version>
        <jsch.version>0.1.55</jsch.version>
        <junit5.version>5.8.2</junit5.version>
        <liquibase.version>4.7.1</liquibase.version>
        <log4j.version>2.17.1</log4j.version><!-- Synchronize with 'spring-boot-starter-log4j2'-injected version -->
        <lombok.version>1.18.22</lombok.version>
        <mockito.version>4.3.1</mockito.version>
        <netbeans.version>RELEASE130</netbeans.version>
        <spotbugs.version>4.5.3</spotbugs.version>
        <spring.boot.version>2.6.6</spring.boot.version>
        <spring.version>5.3.18</spring.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>
